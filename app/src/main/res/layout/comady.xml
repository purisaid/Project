<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="comedy"
        android:id="@+id/textView9"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="40dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tootsie"
        android:id="@+id/tootsie"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/textView9"
        android:layout_alignStart="@+id/romanholiday"
        android:checked="false" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roman Holiday"
        android:id="@+id/romanholiday"
        android:layout_below="@+id/tootsie"
        android:layout_alignEnd="@+id/textView9"
        android:checked="false" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The player"
        android:id="@+id/theplayer"
        android:layout_below="@+id/romanholiday"
        android:layout_alignStart="@+id/tootsie"
        android:checked="false" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="borat"
        android:id="@+id/boray"
        android:layout_below="@+id/theplayer"
        android:layout_alignStart="@+id/theplayer"
        android:checked="false" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="election"
        android:id="@+id/election"
        android:checked="false"
        android:layout_below="@+id/boray"
        android:layout_alignStart="@+id/boray" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
        android:id="@+id/back"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/election"
        android:layout_toStartOf="@+id/election" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/next"
        android:layout_alignTop="@+id/button4"
        android:layout_toEndOf="@+id/button4"
        android:text="next" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="buy"
        android:id="@+id/button4"
        android:layout_alignTop="@+id/back"
        android:layout_toEndOf="@+id/back" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to basket"
        android:id="@+id/tobasket"
        android:layout_below="@+id/back"
        android:layout_toStartOf="@+id/next" />

</RelativeLayout>
