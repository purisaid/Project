<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Action"
        android:id="@+id/textView8"
        android:textSize="40dp"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/killbill"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:focusableInTouchMode="true"
        android:id="@+id/rg">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jamesbond  "
            android:id="@+id/jamesbond"
            android:checked="true"
            android:layout_below="@+id/spiderman"
            android:layout_centerHorizontal="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Killbill"
            android:id="@+id/killbill"
            android:checked="false"
            android:layout_below="@+id/batman"
            android:layout_alignStart="@+id/superman" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Superman"
            android:id="@+id/superman"
            android:checked="false"
            android:layout_below="@+id/killbill"
            android:layout_alignStart="@+id/jamesbond" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spiderman"
            android:id="@+id/spiderman"
            android:checked="false"
            android:layout_below="@+id/superman"
            android:layout_alignStart="@+id/superman" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Batman"
            android:id="@+id/batman"
            android:checked="false"
            android:layout_below="@+id/textView8"
            android:layout_alignStart="@+id/killbill" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="buy"
            android:id="@+id/buy"
            android:layout_alignEnd="@+id/textView8"
            android:layout_below="@+id/jamesbond"
            android:onClick="buyClicked" />
    </RadioGroup>

</RelativeLayout>
